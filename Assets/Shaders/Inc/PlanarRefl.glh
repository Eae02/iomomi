#ifndef PLANAR_REFL_H
#define PLANAR_REFL_H

#ifndef REFLECTION_CLIP_PLANE
#define REFLECTION_CLIP_PLANE 0
#endif

void planarReflection(vec4 plane, inout vec3 worldPos)
{
	float distToPlane = dot(plane, vec4(worldPos, 1.0));
	worldPos -= (2 * distToPlane) * plane.xyz;
	gl_ClipDistance[REFLECTION_CLIP_PLANE] = distToPlane;
}

#endif
